<div class="container my-5">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <h1>新規登録</h1>
  </div>
  <div class="row">
    <%= form_with model: @new_game, url: admins_games_path, local:true do |f| %>
    <table class="table">
      <tbody>
        <tr>
          <td>ゲーム画像</td>
          <td><%= f.attachment_field :game_image %></td>
        </tr>
        <tr>
          <td>ゲームタイトル</td>
          <td><%= f.text_field :game_title, placeholder: "ゲーム名" %></td>
        </tr>
        <tr>
          <td>ゲーム説明</td>
          <td><%= f.text_area :game_introduction, placeholder: "ここに説明文を記述します" %></td>
        </tr>
        <tr>
          <td>ランク</td>
          <td>
            <%#= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "タイトルを選択してください" %>
          </td>
        </tr>
      </tbody>
    </table>
    <%= f.submit '新規登録',  class: "btn btn-success" %>
    <% end %>
  </div>
</div>
