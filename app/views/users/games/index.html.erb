<div class="container w-75 mb-5">
  <div class="row-sm-12">
    <div class="col">
    <div class="col mt-4 d-flex align-items-end">
      <h2>ゲーム一覧</h2>
      <h4>(全<%= @games.total_count %>中<%= @games.count %>件)</h4>
    </div>
  </div>
  <div class="row  d-flex align-items-start">
    <% @games.each do |game| %>
    <div class="col-md-3 mt-3">
      <%= link_to game_path(game) do %>
      <%= attachment_image_tag(game, :game_image, :fill, 250, 180,  fallback: "no_image.jpeg", size:'250x180') %><br>
      <% end %>
      <div>
        <%= link_to game_path(game) do %>
        <%= game.game_title %><br>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>
</div>
  <div class="mb-4 d-flex justify-content-center">
    <%= paginate(@games) %>
  </div>
