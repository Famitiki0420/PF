<main>
  <div class = "container my-5 ">
    <div class="row">
      <div class="col-sm-2">
        <h3 class="offset-1 bg-light">マイページ</h3>
      </div>
    </div>
    <div class="row my-3">
      <div class="col-sm-2">
        <h3>登録情報</h3>
      </div>
      <div class="col-sm-2">
        <%= link_to '編集する', edit_information_path, class: "btn btn-success  px-3"%>
      </div>
    </div>

    <div class='row '>
      <div class="col-sm-7 ">
          <!--Current userの編集画面へ遷移させる-->
              <table class = 'table border'>
                <!--user情報をそれぞれ入れる-->
                <tr>
                  <td class = 'information border bg-light'>ユーザー画像</td>
                  <td><%= attachment_image_tag @user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
                </tr>
                <tr>
                  <td class = 'information border bg-light'>名前</td>
                  <td><%= @user.name %></td>
                </tr>
                <tr>
                  <td class = 'information border bg-light'>メールアドレス</td>
                  <td><%= @user.email %></td>
                </tr>
                <tr>
                  <td class = 'information border bg-light'>紹介文</td>
                  <td><%= @user.introduction %></td>
                </tr>
              </table>
              <!--各リンク先のパスを入れる-->
            <div class = 'other-information'>
              <div class="d-flex align-items-end">
                <h4 class="mr-5">配送先</h4>
                <%= link_to '一覧を見る', mypage_path, class: "btn btn-primary" %>
              </div>
              <div class="d-flex align-items-end">
                <h4 class="mr-4">注文履歴</h4>
                <%= link_to '一覧を見る', mypage_path, class: "btn btn-primary mt-3" %>
              </div>
            </div>
      </div>
    </div>
  </div>
</main>
