<div class = "container">
  <div class="row my-5">
    <div class="col offset-1">
      <h3>新規会員登録</h3>
    </div>
  </div>
  <div class='row'>
    <div class="col-xs-offset-1 col-xs-8">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <table class = 'table inin '>
        <tr class="field">
          <td><%= f.label :名前 %></td>
          <td></td>
          <td><%= f.text_field :name, placeholder: "ニックネーム", autofocus: true, class: "border border-dark rounded", :size => "20*30" %></td>
        </tr>

        <tr class="field">
          <td><%= f.label :メールアドレス %></td>
          <td></td>
          <td><%= f.email_field :email, placeholder: "sample@exmple.com", autofocus: true, autocomplete: "email", class: "border border-dark rounded", :size => "20*30" %></td>
        </tr>

        <tr class="field">
          <td><%= f.label :パスワード %></td>
          <td></td>
          <td><%= f.password_field :password, autocomplete: "new-password", class: "border border-dark rounded", :size => "20*30" %></td>
        </tr>

        <tr class="field">
          <td><%= f.label :パスワード %>（確認用）</td>
          <td></td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "border border-dark rounded", :size => "20*30" %></td>
        </tr>

      </table>

        <div class="actions mb-5 d-flex justify-content-center">
          <%= f.submit "新規登録", class: "btn btn-success btn-lg" %>
        </div>
        <% end %>

      <h4 class="offset-1">すでに会員済みの方はこちら</h4>
      <div class="offset-3 mb-5">
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>
