<!DOCTYPE html>
<html>
  <head>
    <title>E-コミュ</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%# binding.pry %>
    <nav class="navbar navbar-expand-lg navbar-dark">
      <div class="container">
        <%= link_to root_path do %>
          <%= image_tag 'logo.png', width: '40%', height: '40%' %>
        <% end %>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <% if admin_signed_in? %>
              <li><%= link_to 'ゲーム一覧', admins_games_path, class: "btn btn-light border border-dark text-warning mr-1" %></li>
              <li><%#= link_to '会員一覧', admin_users_path, class: "btn btn-light border border-dark text-warning mr-1" %></li>
              <li><%#= link_to 'ランク管理', admin_ranks_path, class: "btn btn-light border border-dark text-warning mr-1" %></li>
              <li><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: "btn btn-light border border-dark text-warning mr-1" %></li>
            <% elsif user_signed_in? %>
                <p>ようこそ、<%= current_user.name %>さん!</p>
                <li><%= link_to 'マイページ', mypage_path(current_user.id), class: "btn btn-light border border-dark text-warning mr-1" %></li>
                <li><%#= link_to 'ゲーム一覧', games_path, class: "btn btn-light border border-dark text-warning mr-1" %></li>
                <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "btn btn-light border border-dark text-warning mr-1" %></li>
            <% else %>
              <li><%= link_to 'About', about_path, class: "btn btn-light border border-dark text-warning mr-1" %></li>
              <li><%#= link_to 'ゲーム一覧', games_path, class: "btn btn-light border border-dark text-warning mr-1" %></li>
              <li><%= link_to '新規登録', new_user_registration_path, class: "btn btn-light border border-dark text-warning mr-1" %></li>
              <li><%= link_to 'ログイン', new_user_session_path, class: "btn btn-light border border-dark text-warning mr-1" %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <main>
      <%= yield %>
      <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>
      <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>
    </main>

 
    <footer>
      <div class='container mt-4'>
        <div class='row d-flex justify-content-center'>
          <div class='d-flex align-items-center'>
            <p class="pr-2 text-primary bg-white border border-dark">Prsent From Famitikiclub</p>
          </div>
        </div>
      </div>
      <div class='container mt-0'>
        <div class='row d-flex justify-content-end'>
          <div class='d-flex align-items-center fa-lg'>
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome-animation/0.0.10/font-awesome-animation.css" type="text/css" media="all" />
            <a class="fab fa-facebook-square faa-wrench animated-hover" href="https://www.facebook.com/"></a>
            <a class="fab fa-twitter-square faa-wrench animated-hover" href="https://twitter.com/"></a>
            <a class="fab fa-instagram faa-wrench animated-hover" href="https://www.instagram.com/"></a>
          </div>
        </div>
      </div>
    </footer>
    
    
    
  </body>
</html>
